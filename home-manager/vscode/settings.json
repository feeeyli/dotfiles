{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "breadcrumbs.enabled": false,
  "catppuccin-icons.hidesExplorerArrows": true,
  "chat.commandCenter": {
    "enabled": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    // "source.organizeImports.biome": "explicit"
  },
  "editor.detectIndentation": false,
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.minimap.autohide": "mouseover",
  "editor.tabSize": 2,
  "explorer.compactFolders": false,
  "explorer.confirmPasteNative": false,
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font Mono', monospace",
  "terminal.integrated.fontLigatures": {
    "enabled": true
  },
  "update.mode": "none",
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Mokka: Red Blue",
  "workbench.editor": {
    "empty": {
      "hint": "hidden"
    }
  },
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.navigationControl": {
    "enabled": false
  },
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.indent": 14,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "biome.suggestInstallingGlobally": false,
  
  "editor.minimap.enabled": false,
  "editor.guides.indentation": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.matchBrackets": "near",
  "editor.occurrencesHighlight": "off",
  "editor.renderLineHighlight": "none",
  "scm.compactFolders": false,
  "window.title": " ",
  "window.controlsStyle": "hidden",
  // "window.customTitleBarVisibility": "",
  // "window.titleBarStyle": "native",
  "workbench.tree.renderIndentGuides": "none",
  "editor.stickyScroll.enabled": false,
  "editor.mouseWheelZoom": false,
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "onWindowChange",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "explorer.decorations.colors": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.editor.enablePreview": false
}
